<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <!-- CSS only -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
            crossorigin="anonymous">
        <link rel="stylesheet" href="index.css">
    </head>
    <body style="background-color:rgba(0, 0, 0, 0.7) ;">
        <header>
            <nav class="navbar w-100 navbar-expand-lg navbar-light">
                <div class="container">
                    <div class="logo">
                        <h3 class="text-white">Blog</h3>
                    </div>
                    <ul class="nav ms-auto align-items-center">
                        <li class="nav-item"><a class="nav-link text-white"
                                href="#">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white"
                                href="#">About</a></li>
                        <li class="nav-item"><a class="nav-link text-white"
                                href="#">Login</a></li>
                        <li class="nav-item"><a class="nav-link text-white btn btn-info"
                                href="/postform">New Post
                            </a></li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- form -->
        <section class="mt-5">
            <div class="container text-white">
                <h2>Register</h2>
                <form class="my-4" method="post" action="/user/reguser">
                    <div class="mb-3">
                        <label for="uname" class="form-label">Username: </label>
                        <input type="text" class="form-control" name="uname" id="exampleInputPassword1">
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Password</label>
                      <input type="password" name="password" class="form-control" id="exampleInputPassword1">
                    </div>
                    <div class="mb-3">
                        <label for="contact" class="form-label">Contact Number: </label>
                        <input type="number" class="form-control" name="contact" id="exampleInputPassword1">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
                  <p class="fs-5">Already Member of Us? <a href="/user/login" class="btn btn-warning text-black fw-bold">Login</a></p>
            </div>
        </section>
        

        <!-- JavaScript Bundle with Popper -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous">
        </script>
    </body>
</html>